@model ShopMVC.Areas.Admin.Models.ViewModels.DeliveryViewModel
@using ShopMVC.Extensions

<div class="sortFilter__button">
    <div class="btn-group">
        <button id="pack-filter-button" class="btn btn-secondary px-4" type="button">
            Filter
        </button>
    </div>
</div>

<div class="sortFilter text-center">
    <div class="text-right">
        <span id="pack-filter-close" class="text-danger mt-2 mr-4" style="font-size: 50px; cursor: pointer;">&#9746</span>
    </div>

    <form asp-action="Index" asp-controller="Delivery">
        <div id="pack-filter" style="display: none;">
            <h2 class="text-white">Filter</h2>

            <h4 class="text-white mt-5">Pack Status</h4>
            @foreach (var item in Model.PackStatus.SelectListItem())
            {
                <div class="form-check mt-4">
                    @Html.RadioButtonFor(x => x.PackStatus, item.Value,
                    new { @class = "form-check-input", @id = $"pack-filterRadio-{item.Value}" })
                    <label class="form-check-label text-white" for="pack-filterRadio-@item.Value">
                        @item.Text
                    </label>
                </div>
            }

            <div class="mt-5">
                <button type="submit" class="btn btn-light">Search</button>
            </div>
        </div>
    </form>
</div>


<script>
    $("#pack-filter-button").click(() => {
        $(".sortFilter").animate({ height: '100%' }, 500);
        $("#pack-filter").css("display", "block");
    });

    $("#pack-filter-close").click(() => {
        $(".sortFilter").animate({ height: '0%' }, 500);
        $("#pack-filter").css("display", "none");
    });

</script>