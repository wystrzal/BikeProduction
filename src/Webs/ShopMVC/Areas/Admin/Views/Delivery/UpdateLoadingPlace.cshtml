@model ShopMVC.Areas.Admin.Models.ViewModels.PostPutLoadingPlaceViewModel

<div class="col-12 col-md-9 offset-md-3 col-lg-10 offset-lg-2 mt-4">
    <h4>Edit Loading Place</h4>
</div>

@using (Html.BeginForm("UpdateLoadingPlace", "Delivery", FormMethod.Post))
{
    <div class="row col-12 mt-3 col-md-10 offset-md-2">
        @Html.TextBoxFor(x => x.LoadingPlace.Id, new { style = "display: none;" })
        @Html.TextBoxFor(x => x.LoadingPlace.LoadedQuantity, new { style = "display: none;" })

        <div class="col-lg-6 offset-lg-0 offset-md-1 mb-3">
            <label for="loadingPlaceName">Loading Place Name</label>
            @Html.TextBoxFor(x => x.LoadingPlace.LoadingPlaceName, new { id = "loadingPlaceName", @class = "form-control" })
        </div>
        <div class="col-lg-6 offset-lg-0 offset-md-1 mb-3">
            <label for="amountOfSpace">Amount Of Space</label>
            @Html.TextBoxFor(x => x.LoadingPlace.AmountOfSpace, new { id = "amountOfSpace", @class = "form-control" })
        </div>
        <div class="text-center col-12 col-md-11 offset-md-1 offset-lg-0 col-lg-12 mb-3">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
        <div class="text-center col-12 col-md-11 offset-md-1 offset-lg-0 col-lg-12 mb-3">
            <div class="text-danger" style="list-style-type: none;">@Html.ValidationSummary()</div>
        </div>
    </div>
}
