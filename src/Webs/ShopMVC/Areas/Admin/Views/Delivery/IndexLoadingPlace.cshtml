@model ShopMVC.Areas.Admin.Models.ViewModels.LoadingPlacesViewModel
@using System


<div class="row text-center pt-4">
    <div class="col-md-9 offset-md-3 col-12 col-lg-10 offset-lg-2 text-center">

        <a class="btn btn-success mb-3" asp-controller="Delivery" asp-action="IndexPack" asp-area="Admin">
            <i class="fas fa-cubes"></i> &nbsp;Packs
        </a>

        @foreach (var pack in Model.LoadingPlaces)
        {
            <div class="custom-shadow border-top p-2 mb-1">
                <a class="row text-dark" style="text-decoration: none;"
                   asp-controller="Delivery" asp-action="PackDetail" asp-area="Admin" asp-route-id="@pack.Id">

                    <div class="col-12 col-sm-4">@pack.LoadingPlaceName</div>
                    <div class="col-12 col-sm-4">@pack.LoadingPlaceStatus.ToString().Replace("_", " ")</div>
                    <div class="col-12 col-sm-4">Qty Left: @(pack.AmountOfSpace - pack.LoadedQuantity)</div>
                </a>
            </div>
        }
    </div>

    @await Html.PartialAsync("~/Areas/Admin/Views/Delivery/_LoadingPlaceFilter.cshtml", Model)
</div>