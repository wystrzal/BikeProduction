@model ShopMVC.Areas.Admin.Models.ViewModels.PackDetailViewModel

<div class="row mt-3 col-12 col-md-9 offset-md-3 col-lg-10 offset-lg-2">
    <div class="col-12 text-center">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <p style="font-size: 22px; font-weight:400;"><i class="fas fa-parachute-box"></i> Pack ID: @Model.PackToDelivery.Id</p>
            </div>
            <div class="col-lg-4 col-md-6">
                <a class="text-dark" style="text-decoration: none;"
                   asp-controller="Order" asp-action="OrderDetail" asp-area="" asp-route-orderId="@Model.PackToDelivery.OrderId">
                    <p style="font-size: 22px; font-weight:400;"><i class="fas fa-box"></i> Order ID: @Model.PackToDelivery.OrderId</p>
                </a>
            </div>
            @if (Model.PackToDelivery.LoadingPlaceId != 0)
            {
                <div class="col-lg-4 col-md-12">
                    <a class="text-dark" style="text-decoration: none;"
                       asp-controller="Delivery" asp-action="LoadingPlaceDetail" asp-route-loadingPlaceId="@Model.PackToDelivery.LoadingPlaceId">
                        <p style="font-size: 22px; font-weight:400;"><i class="fas fa-truck-loading"></i> LoadingPlace ID: @Model.PackToDelivery.LoadingPlaceId</p>
                    </a>
                </div>
            }
        </div>

    </div>
    <div class="col-12 text-left">
        <p style="font-size: 22px; font-weight:400;"><i class="fas fa-calculator"></i> Pack Quantity: @Model.PackToDelivery.ProductsQuantity</p>
    </div>
    <div class="col-12 text-left">
        <p style="font-size: 22px; font-weight:400;"><i class="fas fa-calendar-day"></i> Created: @Model.PackToDelivery.Date</p>
    </div>

    <div class="col-12 mt-4 detail-shadow text-center admin-detail">
        <div class="row">
            <div class="col-12 mt-3">
                <p>
                    <i class="fas fa-house-user"></i> Address <br />
                    @Model.PackToDelivery.Street @Model.PackToDelivery.HouseNumber <br />
                    @Model.PackToDelivery.PostCode @Model.PackToDelivery.City <br />
                    @Model.PackToDelivery.PhoneNumber
                </p>
            </div>
        </div>

        @await Html.PartialAsync("~/Areas/Admin/Views/Delivery/_PackProgressbar.cshtml", Model.PackToDelivery.PackStatus)
    </div>

    @await Html.PartialAsync("~/Areas/Admin/Views/Delivery/_LoadPack.cshtml", Model)
</div>
