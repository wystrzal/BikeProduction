@model ShopMVC.Models.Enums.OrderStatusEnum.OrderStatus
@using ShopMVC.Extensions

<div class="col-12">
    <div class="row d-flex justify-content-center">
        <div class="col-12">
            <ul id="progressbar" class="text-center">
                @{
                    string listItem = "<li class='active step0'></li>";

                    foreach (var orderStatus in Model.SelectListItem())
                    {
                        if (orderStatus.Value == Model.ToString())
                        {
                            @Html.Raw(listItem)
                            listItem = "<li class='step0'></li>";
                            continue;
                        }

                        @Html.Raw(listItem)
                    }
                }
            </ul>
        </div>
    </div>

    <div class="row pb-4">
        <div class="mt-3 col-4 col-sm-2 offset-sm-1"><i class="fas fa-pause-circle"></i> Waiting For Confirm</div>
        <div class="mt-3 col-4 col-sm-2"><i class="fas fa-clipboard-check"></i> Confirmed</div>
        <div class="mt-3 col-4 col-sm-2"><i class="fas fa-truck-loading"></i> Ready To Send</div>
        <div class="mt-3 col-6 col-sm-2"><i class="fas fa-truck"></i> Sended</div>
        <div class="mt-3 col-6 col-sm-2"><i class="fas fa-home"></i> Delivered</div>
    </div>
</div>