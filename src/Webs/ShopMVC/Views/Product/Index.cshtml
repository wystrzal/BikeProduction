@model IEnumerable<ShopMVC.Models.CatalogProduct>

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<div class="container-fluid text-center">
    <div class="row">
        <div class="col-12 mb-5">
            <h4>Sort</h4>
            <div class="btn-group">
                <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Large button
                </button>
                <div class="dropdown-menu">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked />
                        <label class="form-check-label" for="exampleRadios1">
                            Górski
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option1" checked />
                        <label class="form-check-label" for="exampleRadios2">
                            Miejski
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="row">
                @{
                    foreach (var product in Model)
                    {
                        <div class="col-md-4 mb-4 col-6">
                            <h5>@product.ProductName</h5>
                            <h6>@product.Price$</h6>
                            <img src="@product.PhotoUrl" class="img-fluid mb-1" />
                            <div>
                                <input type="number" min="1" class="d-inline form-control" style="width: 50%;" />
                                <button id="@product.Id" class="btn btn-success d-inline">Buy</button>
                            </div>
                        </div>

                        <script>
                            $(document).ready(function () {
                                $("#@product.Id").click(function () {

                                    const basketProducts = [
                                        {
                                            Id: @product.Id,
                                            ProductName: '@product.ProductName',
                                            Price: @product.Price,
                                            Reference: '@product.Reference',
                                            Quantity: 1
                                        }
                                    ];

                                    $.ajax({
                                        type: "POST",
                                        url: "/Basket/UpdateBasket",
                                        data: JSON.stringify(basketProducts),
                                        contentType: "application/json; charset=utf-8",
                                        dataType: "json",
                                        failure: function (response) {
                                            console.log(response);
                                        },
                                        complete: function () {
                                            alert("Ok");
                                        }
                                    });
                                });
                            });



                        </script>
                    }
                }
            </div>
            <div class="mt-2">
                <a class="catalog__arrow"> &#8659; </a>
            </div>
        </div>
    </div>
</div>
