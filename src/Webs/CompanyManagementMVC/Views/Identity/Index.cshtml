<div class="row" style="height: 100%">
    <div class="col-12 text-center position-absolute" style="top: 50%; left: 50%; width: 50%; transform:translate(-50%, -50%);">
        <form method="post" asp-action="Login" asp-controller="Identity">
            <div class="form-group">
                <input name="userName" placeholder="Username" class="form-control" />
            </div>
            <div class="form-group">
                <input name="password" type="password" placeholder="Password" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Login</button>
            </div>

            <div class="text-danger mt-2" style="font-size: 18px">
                @Html.ValidationSummary()
            </div>

        </form>
    </div>
</div>
